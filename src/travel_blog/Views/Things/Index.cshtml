@model IEnumerable<travel_blog.Models.Thing>

@{
    ViewData["Title"] = "Things Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <h4>@Html.DisplayNameFor(model =>model.name)</h4>
    <ul>
        @foreach(var thing in Model)
        {
            <li>@Html.DisplayFor(modelItem => thing.name) | @Html.ActionLink("Details", "Details", new { id = thing.id }) | @Html.ActionLink("Delete", "Delete", new { id = thing.id }) | @Html.ActionLink("Edit", "Edit", new { id = thing.id })</li>

        }
    </ul>

<p>@Html.ActionLink("Add new thing", "Create") </p>
